<%= form_for [:admin, @word] do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>
      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :character %><br>
    <%= f.text_field :character %>
  </div>
  <div class="field">
    <%= f.label :meaning %><br>
    <%= f.text_field :meaning %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name', @word.category_id),  include_blank: true %>
  </div>
  <div class="field">
    <table>
      <%= f.fields_for :options do |builder|%>
        <tr>
          <td>
          <%= builder.hidden_field :word_id, value: @word.id%>
          Options:
          <%= builder.text_field :text%>
          </td>
          <td>
          is Correct:
          <%= builder.check_box  :is_correct%>
         </td>
         <td>
           Delete: <%= builder.check_box :_destroy %>
         </td>
       </tr>
     <% end %>  
    </table>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>