<h1>Listing words</h1>
<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Meaning</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.character %></td>
        <td><%= word.meaning %></td>
        <% category = word.category %>
        <td><%= category.name unless category.nil?%></td>
        <td><%= link_to 'Show', admin_word_path(word) %></td>
        <td><%= link_to 'Edit', edit_admin_word_path(word) %></td>
        <td><%= link_to 'Destroy', admin_word_path(word), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>

<%= link_to 'New Word', new_admin_word_path %>
